<div class="container-fluid">
  <h3 class="center">Manage Expenses</h3>
  <div class="row">
    <div class="white darken-3 input-field col s12 m4 offset-m4">
      <select class="dashboard-month-selector">
        <option value="" disabled selected>Change Month</option>
        <% if(monthList){ %> <% for(month of monthList){ %>
        <option value="<%= month.value %>"><%= month.text %></option>
        <% } %><% }else{ %>
        <option value="" disabled selected>Year ends</option>
        <% } %>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m4 center-align">
      <h5 class="center">Change Month</h5>
      <div class="container">
        <form action="/admin/expense" method="post" class="center-align">
          <div class="input-field">
            <input
              type="date"
              class="center holiday-input"
              name="date"
              value="{{ currentDate }}"
            />
            <label for="date">Date</label>
          </div>
          <div class="input-field">
            <input
              type="text"
              class="center holiday-input"
              name="description"
            />
            <label for="description">Description</label>
          </div>
          <div class="input-field">
            <input type="number" class="center holiday-input" name="amount" />
            <label for="amount">Amount</label>
          </div>
          <input type="submit" class="btn holiday-input" value="Add" />
        </form>
      </div>
    </div>
    <div class="col s12 m8">
      <table class="striped centered">
        <thead>
          <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if(expenses){ %> <% for(expense of expenses){ %>
          <tr>
            <td><%= expense.date %></td>
            <td><%= expense.description %></td>
            <td><%= expense.amount %></td>
            <td>
              <form action="/admin/expense/delete" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                <input
                  type="hidden"
                  name="expenseId"
                  value="<%= expense._id %>"
                />
                <input type="submit" class="btn red" value="Delete" />
              </form>
            </td>
          </tr>
          <% } %> <% }else{ %>
          <tr>
            <td colspan="3">No expenses submitted</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
